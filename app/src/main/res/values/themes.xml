<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travaler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundTint">@color/primary</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_primary</item>
        <item name="titleTextColor">@color/primary</item>
    </style>

    <style name="InputLayout.EditText" parent="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/text_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>